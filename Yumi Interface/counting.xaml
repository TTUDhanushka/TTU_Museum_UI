<Page x:Class="Yumi_Interface.counting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yumi_Interface"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="counting" Initialized="Page_Initialized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="720"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="225"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

      
        <TextBlock  Grid.Row="1" Text="{Binding CurrentPos}" FontSize="130px" FontFamily="Proxima Nova"
                   HorizontalAlignment="Left" Foreground="White" Margin="90 0 0 0"/>
        <!--<Button x:Name="Connect" Grid.Column="1" Grid.Row="2" Content="{Binding CurrentPos}" FontSize="160pt" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Height="180" Width="1080" Click="Connect_Click"/>-->

        <TextBlock Text="{Binding RemainingPos}" Grid.Row="3" Foreground="White" FontSize="90px" 
                   HorizontalAlignment="Left" FontFamily="Proxima Nova" Margin="90 0 0 0"/>

    </Grid>
</Page>
